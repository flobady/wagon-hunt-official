<div class="container text-center">

<h1>Les produits</h1>
<p>
  <%= link_to "Revenir à l'acceuil", root_path, class: "btn btn-primary" %>
  <%= link_to "Créer nouveau produit", new_product_path, class: "btn btn-success" %>
</p>
<ul>
  <%  @products.each do |product| %>
    <li>
      <%= product.name %> (<%= product.url %>)
      <%= link_to "select this product",product_path(product) %>
    </li>
  <% end %>
</ul>

</div>
