<%= simple_form_for @product do |f| %>
  <%= @product.errors.full_messages %>
  <%= f.input :name, placeholder: "Kudoz", label: "Which product?" %>
  <%= f.input :url, placeholder: "http://kudoz.com", label: "Which url?" %>
  <%= f.input :tagline, placeholder: "Ceci est la catch phrase", label: "What tagline?" %>
  <%= f.input :category, collection: ["tech", "education", "design"], prompt: "Which category?" %>
  <%= f.button :submit ,"Sauvegarder", class: "btn btn-primary" %>
<% end %>
