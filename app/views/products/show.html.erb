<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= @product.photo? ? cloudinary_url(@product.photo.path, width: 1280, crop: :fill) : image_path("background.jpg") %>');">
  <div class="banner-content">
    <h1> <%= @product.name %> </h1>
    <h2> <%= @product.tagline %> </h2>
    <h2> <%= @product.category %> </h2>
    <% if @product.user %>
      <h2> Added by: <%= @product.user.email %> </h2>
    <% end %>

    <% if @product.photo? %>
      <%= cl_image_tag @product.photo.path, width: 200 %>
    <% end %>
    <ul>
        <% @messages.each do |message| %>
          <li> <%= message.user.email %> : <%= message.content %> </li>
        <% end %>
    </ul>
    <%= link_to "Visit website", @product.url, class: "btn btn-primary" %>
    <%= link_to "Editer", edit_product_path(@product), class: "btn btn-warning" %>
    <%= link_to "Supprimer",product_path(@product), method: :delete, class: "btn btn-danger" %>
    <%= link_to "Revenir Ã  la liste de produits", products_path, class: "btn btn-info" %>
    <%= link_to "Liker", upvotes_path, method: :post, class: "btn btn-info" %>
    <%= link_to "Poster", new_message_path, class: "btn btn-info" %>
  </div>
</div>


