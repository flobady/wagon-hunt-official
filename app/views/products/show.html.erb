<div class="container text-center">

  <h1>Le détail du produit</h1>
  <h2 class = "text-center">  <%= @product.name %> </h2>
  <h3 class = "text-center"> Url : <%= @product.url %></h3>
  <p class = "text-center">
    <%= link_to "Editer", edit_product_path(@product), class: "btn btn-primary" %>
    <%= link_to "Supprimer",product_path(@product), method: :delete, class: "btn btn-danger" %>
    <%= link_to "Revenir à la liste de produits", products_path, class: "btn btn-info" %>
  </p>
</div>
